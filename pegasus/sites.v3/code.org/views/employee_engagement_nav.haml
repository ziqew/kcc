#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'All opportunities'=>'/engagement', 'Classroom visit'=>'/engagement/classroom', 'Hour of Code'=>'/engagement/hour-of-code', 'After school club'=>'/engagement/after-school', 'Company visit'=>'/engagement/company-visit', 'CS Mentors'=>'/engagement/cs-mentors'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

